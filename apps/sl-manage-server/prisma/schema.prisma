datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  createdAt      DateTime        @default(now())
  id             String          @id @default(cuid())
  inventoryItems InventoryItem[]
  name           String?
  updatedAt      DateTime        @updatedAt
}

model InventoryItem {
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  createdAt  DateTime  @default(now())
  dueDate    DateTime?
  id         String    @id @default(cuid())
  name       String?
  price      Float?
  quantity   Int?
  supplier   Supplier? @relation(fields: [supplierId], references: [id])
  supplierId String?
  updatedAt  DateTime  @updatedAt
}

model Supplier {
  contactInformation String?
  createdAt          DateTime        @default(now())
  id                 String          @id @default(cuid())
  inventoryItems     InventoryItem[]
  name               String?
  updatedAt          DateTime        @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
